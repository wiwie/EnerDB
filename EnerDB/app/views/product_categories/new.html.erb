<%= form_for(ProductCategory.new()) do |f| %>
<div class="field">
  <%= f.label :category_name %>
  <%= f.text_field :category_name %><br>
  <%= f.label :parent_category %>
  <%= f.collection_select(:product_category_id, ProductCategory.all, :id, :category_name, :prompt => 'Select' ) %><br>
</div>
<div class="actions">
  <%= f.submit %>
</div>
<% end %>