<%= form_for(Product.new()) do |f| %>
<div class="field">
  <%= f.label :product_name %>
  <%= f.text_field :product_name %><br>
  <%= f.label :product_category_id %>
  <%= f.collection_select(:product_category_id, ProductCategory.all, :id, :category_name, :prompt => 'Select' ) %><br>
</div>
<div class="actions">
  <%= f.submit %>
</div>
<% end %>